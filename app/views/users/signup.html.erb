<!-- NAVIGATION -->
<div class="w3-bar  w3-black">
  <a href="/" class="w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white w3-left"><img src="images/Primo-logo-white-simple.png" alt="LOGO" width="77" height="25" id="img-logo"></a>
  <a href="/login" class="w3-bar-item w3-button w3-hover-none w3-text-grey w3-hover-text-white w3-right">Log In</a>
</div>

<!-- SIGN UP FORM -->
<div class="w3-card-4 w3-dark-grey w3-center" style="max-width: 500px; margin:auto; margin-top: 80px; background: white; padding: 10px;">
  <div class="w3-container w3-center">
    <h3>Join The Primo Society</h3>
     <h4><%= "Fill out all fields" if @user && @user.errors.any? %></h4>
    <form method="POST" action="/signup">
      <label class="w3-left">Username</label><br>
      <input type="text" class="w3-input w3-border" id="username" name="username" /><br>
      <label class="w3-left">Email</label><br>
      <input type="email" class="w3-input w3-border" id="email" name="email" /><br>
      <label class="w3-left">Password</label><br>
      <input type="password" class="w3-input w3-border" id="password" name="password" /><br>
      <label class="w3-left">Confirm Password</label><br>
      <input type="password" class="w3-input w3-border" id="password" name="password_confirmation" /><br>
      <input type="submit" value="Sign Up"/>
    </form>
  </div>
</div>
