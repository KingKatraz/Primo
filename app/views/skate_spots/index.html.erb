<!-- PAGE TITLE -->
<div class="w3-container w3-center">
  <h1 class="w3-jumbo">Skate Spots</h1>
  <hr class="w3-border-grey" style="margin:auto;width:40%"><br>
</div>

<!-- SKATE SPOT CARDS -->
<div class="w3-row-padding">
<%@skate_spots.each do |spot| %>
  <div class="w3-third w3-margin-bottom">
    <div class="w3-card-4">
      <div class="w3-container">
        <a href='/skate_spots/<%=spot.id%>' class="skate_spot_title"><h3><%= spot.name%></a>
          <span> - <a href="/users/<%=spot.user.id%>"><%=spot.user.username%></a> </span></h3>
          <p><%= spot.location%><br>
            <%= spot.heat_index%><br>
            <%= spot.skill_level%><br>
            <%= spot.description%>
          </p>
        </div>
      </div>
    </div>
<% end %>
</div>

   
  

   

